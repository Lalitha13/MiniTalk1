<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="@drawable/background">

    <Button
        android:id="@+id/trial"
        style="none"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="#11000000"
        android:text="TRIAL"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#FFF7FAF1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/trial"
        android:layout_marginTop="224dp"
        android:text="   Want to practice more topics?
Want to track your performance?"
        android:textColor="#57f419"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/trial" />

    <Button
        android:id="@+id/registernow"
        style="none"
        android:layout_width="266dp"
        android:textColor="#FFF7FAF1"
        android:background="#11000000"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="263dp"
        android:text="REGISTER NOW"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="131dp"
        android:text="Already an user?"
        android:textColor="#57f419"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        android:id="@+id/login1"
        android:background="@drawable/button"
        style="none"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:text="LOGIN"
        android:textColor="#FFF7FAF1"
        android:textAppearance="@style/TextAppearance.AppCompat"

        android:textSize="20dp" />

</RelativeLayout>